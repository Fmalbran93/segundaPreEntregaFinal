<div class="container mt-5">
  <h1 class="mb-4 text-warning">Carrito de compras</h1>
  {{#if result}} <!--Recibe atributos del carrito desde mongo-->
    <div class="card">
      <div class="card-body" style="background: rgba(24, 24, 51, 0.8);">
        <p class="card-text text-light"><strong class="text-warning">ID carrito:</strong> {{result._id}}</p>
        <ul class="list-group d-grid gap-4">
          {{#each result.products}} <!--Recibe los atributos del producto que estan guardaos en el carrito-->
            <li class="list-group-item cart-items rounded" style="background: rgba(24, 24, 51);">
              <h3 class="mb-2 text-warning border-bottom border-warning mb-3">{{this._id.title}}</h3>
              <p class="mb-1 text-light">{{this._id.description}}</p>
              <p class="mb-1 text-warning">Categoria: <span class="text-light">{{this._id.category}}</span></p>
              <p class="mb-1 text-warning">cantidad: <span class="text-light">{{this.quantity}}</span></p>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  {{else}}
    <div class="alert alert-warning" role="alert">
      <h4 class="alert-heading">Carrito vacio</h4>
      <p>{{message}}</p>
    </div>
  {{/if}}
</div>